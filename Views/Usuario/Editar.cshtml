@model Inmobiliaria.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h4>Editar Usuario</h4>
<hr />

<form asp-action="EditarAvatar" asp-controller="Usuario" enctype="multipart/form-data">
    <input type="hidden" name="idUsuario" value="@Model.IdUsuario" />
    <div class="form-group">
        <label asp-for="AvatarFile" class="control-label">Avatar</label>
        <input type="file" name="AvatarFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Avatar</button>
</form>

<!-- Resto de los campos para editar otros detalles del usuario -->

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
